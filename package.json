{
  "name": "@synapseprotocol/sdk",
  "version": "0.95.1-alpha.9",
  "description": "Synapse Protocol's NodeJS SDK.",
  "repository": "github.com/synapsecns/sdk",
  "author": "synapsecns",
  "license": "ISC",
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "/dist",
    "/LICENSE",
    "/README.md",
    "/CONTRIBUTING.md",
    "/tsconfig.json",
    "/package.json"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./token": {
      "types": "./dist/token.d.ts",
      "import": "./dist/token.js"
    },
    "./swaptype": {
      "types": "./dist/internal/swaptype.d.ts",
      "import": "./dist/internal/swaptype.js"
    },
    "./tokens": {
      "types": "./dist/tokens.d.ts",
      "import": "./dist/tokens.js"
    },
    "./tokenswap": {
      "types": "./dist/tokenswap.d.ts",
      "import": "./dist/tokenswap.js"
    },
    "./swappools": {
      "types": "./dist/swappools.d.ts",
      "import": "./dist/swappools.js"
    },
    "./synapsebridge": {
      "types": "./dist/bridge/bridge.d.ts",
      "import": "./dist/bridge/bridge.js"
    },
    "./common/types": {
      "types": "./dist/common/types.d.ts",
      "import": "./dist/common/types.js"
    },
    "./common/utils": {
      "types": "./dist/common/utils.d.ts",
      "import": "./dist/common/utils.js"
    },
    "./common/chainid": {
      "types": "./dist/common/chainid.d.ts",
      "import": "./dist/common/chainid.js"
    },
    "./common/gasoptions": {
      "types": "./dist/common/gasoptions.d.ts",
      "import": "./dist/common/gasoptions.js"
    },
    "./common/networks": {
      "types": "./dist/common/networks.d.ts",
      "import": "./dist/common/networks.js"
    }
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "ts-patch install -s",
    "setup:dev": "yarn install --frozen-lockfile",
    "setup": "yarn && yarn -s run typegen",
    " -----------": "",
    "pretest": "yarn run react:add",
    "precoverage:test": "yarn run pretest",
    "test": "scripts/sdk-tests test",
    "coverage:test": "scripts/sdk-tests coverage test",
    "coverage:report": "scripts/sdk-tests coverage report",
    "posttest": "yarn run react:remove",
    "  -----------": "",
    "prebuild": "yarn prepare && rm -rf ./dist",
    "build": "tsc --moduleDetection force --project tsconfig.build.json",
    "prepublishOnly": "yarn build",
    "   -----------": "",
    "preabigen": "scripts/generate abigen prepare",
    "preabigen:compile": "scripts/generate abigen prepare",
    "abigen": "scripts/generate abigen download",
    "abigen:compile": "scripts/generate abigen compile",
    "typegen": "scripts/generate typegen",
    "posttypegen": "rm -rf ./abigen",
    "    -----------": "",
    "fixup": "scripts/fixup",
    "react:add": "yarn add --frozen-lockfile --dev react@^17.0.0",
    "react:remove": "yarn remove --frozen-lockfile react --dev && yarn add --frozen-lockfile --peer react@^17.0.0"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.5.0",
    "@ethersproject/abstract-signer": "^5.5.0",
    "@ethersproject/bignumber": "^5.5.0",
    "@ethersproject/bytes": "^5.5.0",
    "@ethersproject/constants": "^5.5.0",
    "@ethersproject/contracts": "^5.5.0",
    "@ethersproject/providers": "^5.5.0",
    "@ethersproject/transactions": "^5.5.0",
    "@ethersproject/units": "^5.5.0",
    "@ethersproject/wallet": "^5.5.0",
    "@ethersproject/web": "^5.5.1",
    "@types/react": "^18.0.5",
    "@web3-react/abstract-connector": "^6.0.7",
    "@web3-react/injected-connector": "^6.0.7",
    "@web3-react/network-connector": "^6.2.9",
    "ethers": "^5.5.1",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@ethereum-waffle/chai": "3.4.4",
    "@typechain/ethers-v5": "10.0.0",
    "@types/chai-as-promised": "7.1.5",
    "@types/chai-things": "0.0.35",
    "@types/lodash": "4.14.182",
    "@types/lodash-es": "4.17.6",
    "@types/mocha": "9.1.1",
    "@types/node": "17.0.21",
    "@zoltu/typescript-transformer-append-js-extension": "1.0.1",
    "c8": "7.11.2",
    "chai": "4.3.6",
    "chai-as-promised": "7.1.1",
    "chai-things": "0.2.0",
    "coveralls": "3.1.1",
    "dotenv": "16.0.0",
    "mocha": "10.0.0",
    "mocha-lcov-reporter": "1.3.0",
    "mocha-steps": "1.3.0",
    "ts-mocha": "9.0.2",
    "ts-node": "10.7.0",
    "ts-patch": "2.0.1",
    "typechain": "8.0.0",
    "typescript": "^4.7.0-beta",
    "typescript-transform-paths": "3.3.1"
  },
  "peerDependencies": {
    "react": "^17.0.0"
  }
}
